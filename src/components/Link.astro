---
import { cn } from '@lib/utils';

type Props = {
  href: string;
  class?: string;
  external?: boolean;
  underline?: boolean;
};

const { href, class: className, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  class={cn(
    'inline-block text-current transition-colors duration-300 ease-in-out',
    'hover:text-black hover:dark:text-white',
    'decoration-black/25 dark:decoration-white/25 hover:decoration-black/50 hover:dark:decoration-white/50',
    underline && 'underline underline-offset-2',
    className
  )}
  {...rest}>
  <slot />
</a>
