---
import Head from '@components/Head.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { SITE } from '@consts';

type Props = {
  title: string;
  description: string;
  hideHeader?: boolean;
};

const { title, description, hideHeader } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${SITE.NAME} ${title ? `| ${title}` : ''}`} description={description} />
  </head>
  <body>
    {!hideHeader && <Header />}
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
