---
import Container from '@components/Container.astro';
import PageLayout from '@layouts/PageLayout.astro';
import Link from '@components/Link.astro';
import { cn } from '@lib/utils';
import { HOME } from '@consts';
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION} hideHeader>
  <Container>
    <div class="mt-8 space-y-16 md:mt-32">
      <section class="relative">
        <div
          class="animate absolute right-0 top-[25px] w-[200px] overflow-hidden rounded-[25px] sm:top-[-85px] sm:w-[235px]">
          <img
            src="MitchLinocut.png"
            alt="Mitch Linocut"
            class="block opacity-35 dark:hidden sm:opacity-85"
          />
          <img
            src="MitchLinocut_BlackTransparent.png"
            alt="Mitch Linocut"
            class="hidden opacity-35 dark:block sm:opacity-85"
          />
        </div>
        <h1 class="animate text-4xl font-semibold text-black dark:text-white">Mitch Rosenburg</h1>
        <p class="animate my-2 font-mono">
          {
            '((Front|Back)end|DevOps) Engineer|Code(r| Ninja)'
              .split(/([()|/])/)
              .map((punctuationOrWord) => (
                <span
                  class={cn(
                    !/[()|/]/.test(punctuationOrWord) && 'text-black/35 dark:text-white/35'
                  )}
                  set:html={punctuationOrWord}
                />
              ))
          }
        </p>
      </section>

      <section class="animate">
        <p class="mt-8 text-2xl">
          likes <strong class="text-black dark:text-white">solving problems</strong>
          <br />often by
          <strong class="text-black dark:text-white">building things</strong>
        </p>
      </section>

      <section class="animate">
        <p class="flex flex-wrap gap-2">
          <Link href="/experience">Experience</Link>
          <span>â€¢</span>
          <Link href="/tech-tree">Tech Tree</Link>
        </p>
      </section>
    </div>
  </Container>
</PageLayout>
